{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "jasmine": true
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "import/extensions": ["error", "always"],
    "max-len": "off",
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0,
    "class-methods-use-this": [
      "error",
      {
        "exceptMethods": [
          "validate",
          "after"
        ]
      }
    ]
  }
}
